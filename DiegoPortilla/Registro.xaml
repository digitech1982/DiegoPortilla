<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiegoPortilla.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Green">
                <Label x:Name="lblUsuario" Text="" HorizontalTextAlignment="Center" FontSize="18" TextColor="#fff"/>
            </Frame>

            <Label Text="Resumen" BackgroundColor="Green" HorizontalTextAlignment="Center" FontSize="18" TextColor="#fff"/>
            <Grid>


                <Label Grid.Row="0" Grid.Column="0" Text="Nombre: " FontSize="18"/>
                <Entry x:Name="txtNombre" Grid.Row="0" IsReadOnly="True" Grid.Column="1" FontSize="25"/>

                <Label Grid.Row="1" Grid.Column="0" Text="Total a pagar: " FontSize="18"/>
                <Entry x:Name="txtTotal" Keyboard="Numeric" IsReadOnly="True" Grid.Row="1" Grid.Column="1" FontSize="18"/>

                <Label Grid.Row="2" Grid.Column="0" Text="Cuotas mensuales: " FontSize="25"/>
                <Entry x:Name="txtCuotas" Keyboard="Numeric" IsReadOnly="True" Grid.Row="2" Grid.Column="1" FontSize="18"/>


            </Grid>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>